<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/counter"
        android:layout_width="44dp"
        android:layout_height="29dp"
        android:layout_marginTop="212dp"
        android:gravity="center"
        android:text="0"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/update_counter"
        android:layout_width="192dp"
        android:layout_height="49dp"
        android:layout_marginTop="48dp"
        android:backgroundTint="#03A9F4"
        android:onClick="updateCounter"
        android:text="Update"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/counter" />

    <Button
        android:id="@+id/button2"
        android:layout_width="189dp"
        android:layout_height="67dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#F44336"
        android:onClick="doActionOnMainThread"
        android:text="Execute Task on Main Thread"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/update_counter" />

    <Button
        android:id="@+id/button3"
        android:layout_width="188dp"
        android:layout_height="80dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="#009688"
        android:onClick="doActionOnOther"
        android:text="Execute Task on Other Thread"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button2" />


</androidx.constraintlayout.widget.ConstraintLayout>